<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_ad_back"
    tools:context=".NewAdForm">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Insert images of house:"
                android:textColor="@color/DarkSlateGray"
                android:textSize="23sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/new_ad_form_house_image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/ad_form_sample_photo"/>

            <ImageView
                android:id="@+id/new_ad_form_house_image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/ad_form_sample_photo"/>

            <ImageView
                android:id="@+id/new_ad_form_house_image3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/ad_form_sample_photo"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            >

            <ImageView
                android:id="@+id/new_ad_form_house_image4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/ad_form_sample_photo"/>

            <ImageView
                android:id="@+id/new_ad_form_house_image5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/ad_form_sample_photo"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/DarkSlateGray"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="20dp"
            >

            <EditText
                android:id="@+id/new_ad_form_imageTitle"
                android:textSize="23sp"
                android:textStyle="bold"
                android:drawableTint="@color/Black"
                android:textColorHint="@color/DarkSlateGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Crimson"
                android:hint="Title"
                android:background="#00000"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:backgroundTint="@color/DarkSlateGray"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="20dp"
            >

            <EditText
                android:id="@+id/new_ad_form_imageDescription"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:textSize="23sp"
                android:textStyle="bold"
                android:drawableTint="@color/Black"
                android:textColorHint="@color/DarkSlateGray"
                android:textColor="@color/Crimson"
                android:hint="House description"
                android:inputType="textMultiLine"
                android:background="#00000"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/DarkSlateGray"
            >

            <EditText
                android:id="@+id/new_ad_form_address"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="20dp"
                android:drawableTint="@color/Black"
                android:textColorHint="@color/DarkSlateGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Crimson"
                android:hint="Address"
                android:background="#00000"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/DarkSlateGray"
            >

            <EditText
                android:id="@+id/new_ad_form_rent"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="20dp"
                android:drawableTint="@color/Black"
                android:textColorHint="@color/DarkSlateGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Crimson"
                android:hint="Rent"
                android:background="#00000"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <CheckBox android:id="@+id/new_ad_form_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/checkbox"
                android:layout_marginHorizontal="20dp"
                android:textSize="23sp"
                android:textColor="@color/DimGray"
                android:textStyle="bold"
                android:onClick="onCheckboxClicked"
                tools:ignore="OnClick"
                android:layout_marginBottom="20dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.cardview.widget.CardView
            android:id="@+id/edit_user_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="35dp"
                android:paddingVertical="20dp"
                android:text="Submit"
                android:textColor="@color/Indigo"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>