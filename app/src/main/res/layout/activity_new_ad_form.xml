<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_ad_back"
    android:orientation="vertical"
    tools:context=".Activities.NewAdForm">

    <include layout="@layout/toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="20dp"
                    android:text="@string/house_image"
                    android:textColor="@color/DarkSlateGray"
                    android:textSize="23sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/new_ad_form_imagepicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:onClick="openFileChooser">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/new_ad_form_house_image1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:src="@drawable/ad_form_sample_photo"/>

                    <ImageView
                        android:id="@+id/new_ad_form_house_image2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginVertical="10dp"
                        android:src="@drawable/ad_form_sample_photo"/>

                    <ImageView
                        android:id="@+id/new_ad_form_house_image3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:src="@drawable/ad_form_sample_photo"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    >

                    <ImageView
                        android:id="@+id/new_ad_form_house_image4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:src="@drawable/ad_form_sample_photo"/>

                    <ImageView
                        android:id="@+id/new_ad_form_house_image5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginVertical="10dp"
                        android:src="@drawable/ad_form_sample_photo"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/DarkSlateGray"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="20dp"
                >

                <EditText
                    android:id="@+id/new_ad_form_title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:drawableTint="@color/Black"
                    android:textColorHint="@color/DarkSlateGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FireBrick"
                    android:hint="@string/title"
                    android:background="@color/water"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:backgroundTint="@color/DarkSlateGray"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="20dp">

                    <EditText
                        android:id="@+id/new_ad_form_imageDescription"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:drawableTint="@color/Black"
                        android:textColorHint="@color/DarkSlateGray"
                        android:textColor="@color/FireBrick"
                        android:hint="@string/house_description"
                        android:inputType="textMultiLine"
                        android:background="@color/water"
                        android:maxLines="5"
                        android:scrollbars="vertical"
                        />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/DarkSlateGray"
                >

                <EditText
                    android:id="@+id/new_ad_form_address"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="35dp"
                    android:layout_marginHorizontal="20dp"
                    android:drawableTint="@color/Black"
                    android:textColorHint="@color/DarkSlateGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FireBrick"
                    android:hint="@string/address"
                    android:background="@color/water"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Specifications"
                android:textSize="27sp"
                android:layout_marginHorizontal="15dp"
                android:textStyle="bold"
                android:textColor="@color/Indigo">
            </TextView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/black"
                >
            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/DarkSlateGray"
                >

                <EditText
                    android:id="@+id/new_ad_form_area"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:drawableTint="@color/Black"
                    android:textColorHint="@color/DarkSlateGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FireBrick"
                    android:hint="@string/size"
                    android:inputType="number"
                    android:background="@color/water"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/DarkSlateGray"
                >

                <EditText
                    android:id="@+id/new_ad_form_bed_room"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:drawableTint="@color/Black"
                    android:textColorHint="@color/DarkSlateGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FireBrick"
                    android:hint="Bedroom"
                    android:background="@color/water"
                    android:inputType="number"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/DarkSlateGray"
                >

                <EditText
                    android:id="@+id/new_ad_form_attach_bath"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:drawableTint="@color/Black"
                    android:textColorHint="@color/DarkSlateGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FireBrick"
                    android:hint="Attach bath"
                    android:background="@color/water"
                    android:inputType="number"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/DarkSlateGray"
                >

                <EditText
                    android:id="@+id/new_ad_form_balcony"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:drawableTint="@color/Black"
                    android:textColorHint="@color/DarkSlateGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FireBrick"
                    android:hint="Belcony"
                    android:background="@color/water"
                    android:inputType="number"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <CheckBox android:id="@+id/new_ad_form_drawing_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Drawing room available"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/DimGray"
                    android:textStyle="bold"
                    tools:ignore="OnClick"
                    android:layout_marginBottom="15dp"/>

                <CheckBox android:id="@+id/new_ad_form_dining_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dining room available"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/DimGray"
                    android:textStyle="bold"
                    tools:ignore="OnClick"
                    android:layout_marginBottom="15dp"/>

                <CheckBox android:id="@+id/new_ad_form_store_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store room available"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/DimGray"
                    android:textStyle="bold"
                    tools:ignore="OnClick"
                    android:layout_marginBottom="15dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/DarkSlateGray"
                >

                <EditText
                    android:id="@+id/new_ad_form_floor_level"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:drawableTint="@color/Black"
                    android:textColorHint="@color/DarkSlateGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FireBrick"
                    android:hint="Floor level"
                    android:background="@color/water"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/DarkSlateGray"
                >

                <EditText
                    android:id="@+id/new_ad_form_available_date"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:drawableTint="@color/Black"
                    android:textColorHint="@color/DarkSlateGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FireBrick"
                    android:hint="Available from"
                    android:background="@color/water"
                    android:inputType="date"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/DarkSlateGray"
                >

                <EditText
                    android:id="@+id/new_ad_form_rent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:drawableTint="@color/Black"
                    android:textColorHint="@color/DarkSlateGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FireBrick"
                    android:hint="@string/rent"
                    android:inputType="number"
                    android:background="@color/water"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox android:id="@+id/new_ad_form_negotiate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Negotiable"
                android:layout_marginHorizontal="20dp"
                android:textSize="20sp"
                android:textColor="@color/DimGray"
                android:textStyle="bold"
                tools:ignore="OnClick"
                android:layout_marginBottom="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Info"
                android:textSize="27sp"
                android:layout_marginHorizontal="15dp"
                android:textStyle="bold"
                android:textColor="@color/Indigo">
            </TextView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/black"
                >
            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/DarkSlateGray"
                >

                <EditText
                    android:id="@+id/new_ad_form_email"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:drawableTint="@color/Black"
                    android:textColorHint="@color/DarkSlateGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FireBrick"
                    android:hint="Email"
                    android:background="@color/water"
                    android:inputType="textEmailAddress"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/DarkSlateGray"
                >

                <EditText
                    android:id="@+id/new_ad_form_phone_no"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:drawableTint="@color/Black"
                    android:textColorHint="@color/DarkSlateGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/FireBrick"
                    android:hint="Phone no."
                    android:background="@color/water"
                    android:inputType="phone"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/new_ad_form_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="35dp"
                        android:paddingVertical="20dp"
                        android:text="@string/submit"
                        android:textColor="@color/Indigo"
                        android:textSize="23sp"
                        android:textStyle="bold" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>



</androidx.appcompat.widget.LinearLayoutCompat>