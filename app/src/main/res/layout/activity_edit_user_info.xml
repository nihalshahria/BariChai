<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit_user_back"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".EditUserInfo">

    <ImageView
        android:layout_marginTop="60dp"
        android:layout_width="260dp"
        android:layout_height="226dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/edit_user_photo" />

    <EditText
        android:id="@+id/edit_user_name"
        android:textSize="23sp"
        android:textStyle="bold"
        android:drawableTint="@color/Black"
        android:textColorHint="@color/DarkSlateGray"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="Username"
        android:drawableLeft="@drawable/ic_action_user2"
        />

    <EditText
        android:id="@+id/edit_user_email"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:drawableTint="@color/Black"
        android:textColorHint="@color/DarkSlateGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="Phone number"
        android:drawableLeft="@drawable/ic_action_phn"
        />

    <EditText
        android:id="@+id/edit_user_location"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginBottom="45dp"
        android:layout_marginHorizontal="20dp"
        android:drawableTint="@color/Black"
        android:textColorHint="@color/DarkSlateGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="Address"
        android:drawableLeft="@drawable/ic_action_location"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/edit_user_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/LightCyan"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="40dp"
        android:layout_marginTop="20dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingVertical="20dp"
                android:paddingHorizontal="35dp"
                android:textColor="@color/Indigo"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>