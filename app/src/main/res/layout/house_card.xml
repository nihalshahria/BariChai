<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="16dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/house_card_image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@color/black"
            android:scaleType="centerCrop"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp">
                <TextView
                    android:id="@+id/house_card_title"
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Title"
                    android:textColor="@color/Indigo"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/house_card_address"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Address"
                android:textColor="@color/Black"
                android:textSize="17sp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
               >
               <androidx.appcompat.widget.LinearLayoutCompat
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_alignParentLeft="true">

                   <TextView
                       android:id="@+id/house_card_area"
                       android:drawableStart="@drawable/overview_area"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="2400"
                       android:textColor="@color/DarkSlateGray"
                       android:textSize="16sp"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="3dp"
                       android:text="sqft"
                       android:textColor="@color/DarkSlateGray"
                       android:textSize="16sp"/>

               </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/house_card_beds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="3"
                        android:textColor="@color/DarkSlateGray"
                        android:textSize="16sp"
                        android:drawableStart="@drawable/overview_beds"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginHorizontal="5dp"
                        android:text="Beds"
                        android:textColor="@color/DarkSlateGray"
                        android:textSize="16sp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/house_card_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/taka_icon"
                    android:text="Price"
                    android:drawablePadding="2dp"
                    android:textSize="22sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/ForestGreen"/>
                <ImageButton
                    android:id="@+id/fvrt_f2_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/turned_in_not_icon"
                    android:background="@color/Transparent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>