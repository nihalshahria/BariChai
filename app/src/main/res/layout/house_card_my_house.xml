<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="16dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/house_card_image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@color/black"
            android:scaleType="centerCrop"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/house_card_title"
                    android:layout_width="178dp"
                    android:layout_height="25dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Title"
                    android:textColor="@color/Indigo"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <ImageButton
                    android:id="@+id/delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/Transparent"
                    android:src="@drawable/delete_icon" />

            </RelativeLayout>

            <TextView
                android:id="@+id/house_card_address"
                android:layout_width="190dp"
                android:layout_height="23dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Address"
                android:textColor="@color/Black"
                android:textSize="17sp"
                android:layout_marginBottom="2dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true">

                    <TextView
                        android:id="@+id/house_card_area"
                        android:drawableStart="@drawable/overview_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2400"
                        android:textColor="@color/DarkSlateGray"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="sqft"
                        android:textColor="@color/DarkSlateGray"
                        android:textSize="16sp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/house_card_beds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="3"
                        android:textColor="@color/DarkSlateGray"
                        android:textSize="16sp"
                        android:drawableStart="@drawable/overview_beds"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginHorizontal="5dp"
                        android:text="Beds"
                        android:textColor="@color/DarkSlateGray"
                        android:textSize="16sp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </RelativeLayout>

                <TextView
                    android:id="@+id/house_card_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/taka_icon"
                    android:text="Price"
                    android:drawablePadding="2dp"
                    android:textSize="22sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/ForestGreen"/>
            <CheckBox
                android:id="@+id/house_card_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:layout_marginLeft="-6dp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>