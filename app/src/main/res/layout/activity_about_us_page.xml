               android:textSize="13sp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="+8801646767354"
               android:textColor="@color/Black"
               android:drawableStart="@drawable/phone_icon"
               android:drawableTint="@color/DarkGreen"
               android:textSize="13sp"/>

           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center">

               <ImageView
                   android:layout_width="25dp"
                   android:layout_height="18dp"
                   android:src="@drawable/email_icon_aboutus"
                   />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:gravity="center"
               android:text="nihalshahria@gmail.com"
               android:textColor="@color/Black"
               android:textSize="13sp"/>

           </androidx.appcompat.widget.LinearLayoutCompat>

           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center">

               <ImageView
                   android:layout_width="25dp"
                   android:layout_height="24dp"
                   android:src="@drawable/github_logo"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="https://github.com/nihalshahria"
                   android:textColor="@color/Black"
                   android:textSize="13sp"/>

           </androidx.appcompat.widget.LinearLayoutCompat>

           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center">

               <ImageView
                   android:layout_width="25dp"
                   android:layout_height="26dp"
                   android:src="@drawable/facebook_logo"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="https://www.facebook.com/nshahria"
                   android:textColor="@color/Black"
                   android:textSize="13sp"/>

           </androidx.appcompat.widget.LinearLayoutCompat>

       </androidx.appcompat.widget.LinearLayoutCompat>

   </RelativeLayout>

    <RelativeLayout
